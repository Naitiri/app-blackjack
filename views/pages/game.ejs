				<div class="chips-50" data-value="50"></div>
				<div class="chips-100" data-value="100"></div>
			</div>
		</div>
		<div id="players" class="players">
			<div id="player-1" class="player-1">
				<div class="player-bet"></div>
				<div class="player-hand"></div>
				<div class="player-points"></div>
				<!-- <div class="player-img"></div> -->
				<div class="player-name"></div>
				<!-- <div class="player-balance"></div> -->
			</div>
			<div id="player-2" class="player-2">
				<div class="player-bet">50</div>
				<div class="player-hand">0</div>
				<div class="player-points">21</div>
				<!-- <div class="player-img"></div> -->
				<div class="player-name">Иван Иванов</div>
				<div class="player-balance">300</div>
			</div> 
			<div id="player-3" class="player-3">
				<div class="player-bet">30</div>
				<div class="player-hand">0</div>
				<div class="player-points">12</div>
				<!-- <div class="player-img"></div> -->
				<div class="player-name">Петр Петров</div>
				<div class="player-balance">400</div>
			</div> 
			<div id="player-4" class="player-4">
				<div class="player-bet">25</div>
				<div class="player-hand">0</div>
				<div class="player-points">15</div>
				<!-- <div class="player-img"></div> -->
				<div class="player-name">Василий Васильев</div>
				<div class="player-balance">1300</div>
			</div> 
			<div id="player-5" class="player-5">
				<div class="player-bet">90</div>
				<div class="player-hand">0</div>
